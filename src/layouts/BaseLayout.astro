---
/**
 * Props are typed â€” this is real TypeScript.
 */
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      body {
        font-family: system-ui;
        margin: 0;
        padding: 2rem;
        line-height: 1.5;
      }

      nav {
        margin-bottom: 2rem;
      }

      nav a {
        margin-right: 1rem;
      }
    </style>
  </head>

  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/projects">Projects</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </nav>

    <main>
      <slot />
    </main>
  </body>
</html>
