---
export interface Props {
  title: string;
}
const { title } = Astro.props;

const base = import.meta.env.BASE_URL; 
const currentPath = Astro.url.pathname; 
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href={`${base}/editorial-goth.css`} />
  </head>

  <body>
    <div class="wrap">
      <header class="site-header">
        <h1 class="site-title">Mo van Eeden</h1>
        <p class="site-sub">hardware-connected software · embedded systems</p>

        <nav class="nav">
          <a href={`${base}/`} class={currentPath === `${base}/` ? "active" : ""}>
            ✦Home✦
          </a>

          <a
            href={`${base}/projects`}
            class={currentPath.startsWith(`${base}/projects`) ? "active" : ""}
          >
            ❃Projects❃
          </a>

          <a
            href={`${base}/about`}
            class={currentPath === `${base}/about` ? "active" : ""}
          >
            ✯About✯
          </a>

          <a
            href={`${base}/Monja_van_Eeden_Resume.pdf`}
            target="_blank"
            rel="noopener"
          >
            ❀Resume❀
          </a>
        </nav>
      </header>

      <section class="panel">
        <slot />
      </section>

      <footer class="site-footer">
        <a href="https://github.com/monjave/portfolio" target="_blank" rel="noopener">
          View site source
        </a>
      </footer>
    </div>
  </body>
</html>
